<%= form_for :event, url: events_path, method: :post, remote: true do |f| %>
<div>
<%= f.label :description %>
<%= f.text_area :description %>
</div>
<div>
<%= f.label :start_date %>
<%= f.date_field :start_date, value: Date.today.to_s(:db), required: true %>
</div>
<div>
<%= f.label :end_date %>
<%= f.date_field :end_date, value: Date.today.to_s(:db), required: true %>
</div>
<%= f.submit %>
<% end %>